    "pino": "10.2.1",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@commitlint/types": "20.3.1",
    "@eslint/js": "9.39.2",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "@types/http-errors": "2.0.5",
